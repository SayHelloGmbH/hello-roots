{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": false,
        "blocks": {
            "core/button": {
                "border": {
                    "radius": false
                }
            },
            "core/column": {
                "spacing": {
                    "units": ["px", "em", "rem", "vh", "vw", "%"]
                }
            }
        },
        "color": {
            "background": true,
            "custom": false,
            "customDuotone": false,
            "customGradient": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "duotone": [],
            "gradients": [],
            "link": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#77adbf",
                    "name": "Primäre Farbe"
                },
                {
                    "slug": "primary-dark",
                    "color": "#4b8a9f",
                    "name": "Primäre Farbe - dunkel"
                },
                {
                    "slug": "secondary",
                    "color": "#BF8977",
                    "name": "Sekundäre Farbe"
                },
                {
                    "slug": "secondary-dark",
                    "color": "#8E856C",
                    "name": "Sekundäre Farbe - dunkel"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Schwarz"
                },
                {
                    "slug": "white",
                    "color": "#FFFFFF",
                    "name": "Weiss"
                },
                {
                    "slug": "gray",
                    "color": "#999",
                    "name": "Grau"
                },
                {
                    "slug": "gray-light",
                    "color": "#ccc",
                    "name": "Hellgrau"
                }
            ],
            "text": true
        },
        "custom": {
            "line-height": {
                "regular": 1.5,
                "heading": 1.2
            },
            "spacing": {
                "unit": "var(--wp--style--block-gap, 1rem)",
                "outer-gutter": "var(--wp--style--block-gap, 1rem)"
            }
        },
        "layout": {
            "contentSize": "728px",
            "wideSize": "1200px"
        },
        "spacing": {
            "blockGap": true,
            "margin": false,
            "padding": false,
            "units": ["px", "em", "rem", "vh", "vw"]
        },
        "typography": {
            "customFontSize": false,
            "dropCap": false,
            "fontFamilies": [],
            "fontSizes": [],
            "fontStyle": false,
            "fontWeight": false,
            "letterSpacing": false,
            "lineHeight": false,
            "textDecoration": false,
            "textTransform": false
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "1rem"
        }
    },
    "customTemplates": [],
    "templateParts": [
        {
            "name": "comments",
            "title": "Kommentare",
            "area": "uncategorized"
        },
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "menu-toggler",
            "title": "Menü-Button",
            "area": "header"
        },
        {
            "name": "navigation-primary",
            "title": "Primäre Navigation",
            "area": "header"
        },
        {
            "name": "post-categories",
            "title": "Beitragskategorien",
            "area": "uncategorized"
        },
        {
            "name": "post-tags",
            "title": "Beitragsschlagwörter",
            "area": "uncategorized"
        },
        {
            "name": "post-meta",
            "title": "Beitragsmetadaten",
            "area": "uncategorized"
        },
        {
            "name": "post-next-previous",
            "title": "Beitragsnavigation (nächster/voriger)",
            "area": "uncategorized"
        },
        {
            "name": "footer",
            "title": "Fusszeile",
            "area": "footer"
        },
        {
            "name": "loop-default",
            "title": "Beitrags-Loop",
            "area": "uncategorized"
        },
        {
            "name": "spacer",
            "title": "Abstandshalter",
            "area": "uncategorized"
        }
    ]
}
